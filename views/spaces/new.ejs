<%- include("../partials/_head") %>
<%- include("../partials/_nav") %>
<main>
  <h1>Add New Space</h1>
  <%if(locals.errors) {%> <%-include("../partials/_errorAlert", {errors: errors})%>
  <%}%>
  <form action="/spaces" method="POST">
    <!-- Name -->
    <div class="mt-3">
      <label class="d-block" for="name">Name:* </label>
      <input type="text" id="name" name="name" />
    </div>
    <!-- Description -->
    <div class="mt-3">
      <label class="d-block" for="description">Description:* </label>
      <textarea
        name="description"
        id="description"
        rows="5"
        cols="50"
        placeholder="How would you describe this space?"
        required
      ></textarea>
    </div>
    <!-- Space -->
    <div class="mt-3">
      <h6>Parent Space*</h6>
      <select name="spaceId" id="spaceId">
        <option value="" disabled>Please select a space</option>
        <% spaces.forEach((space) => { %>
        <option value="<%=space._id%>"><%=space.name%></option>
        <% }) %>
      </select>
    </div>
    <!-- Features, may need to be modified to accept object -->

    <!-- Submit button -->
    <div class="mt-4">
      <button class="btn btn-primary btn-sm" type="submit">Create Space</button>
      <a class="btn btn-danger btn-sm" href="/spaces">Cancel</a>
    </div>
  </form>
  <br />
</main>
<%- include("../partials/_footer") %>
