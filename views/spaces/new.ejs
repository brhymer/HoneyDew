<%- include("../partials/_head") %>
<main>
  <h1>Add New Space</h1>
  <%if(locals.error) {%> <%-include("../partials/_errorAlert", {error: error})%>
  <%}%>
  <form action="/spaces" method="POST">
    <!-- Name -->
    <div class="mt-3">
      <label class="d-block" for="name">Name: </label>
      <input type="text" id="name" name="name" />
    </div>
    <!-- Description -->
    <div class="mt-3">
      <label class="d-block" for="description">Description: </label>
      <textarea
        name="description"
        id="description"
        rows="5"
        cols="50"
        placeholder="How would you describe this space?"
      ></textarea>
    </div>
    <!-- Features, may need to be modified to accept object -->
    <div class="mt-3">
      <label class="d-block" for="features">Features (optional): </label>
      <input type="text" id="features" name="features" />
    </div>
    <!-- To do: add fields for Spaces, Tasks, Users -->
    <!-- <label class="d-block" for=""></label>
    <input type="text" id="" name="" /> -->

    <!-- Submit button -->
    <button type="submit">Create this space</button>
  </form>
  <br />
  <a href="/spaces">Abandon new space and return to index</a>
</main>
<%- include("../partials/_footer") %>
