<%- include("../partials/_head")%>

<h1>Customize your profile</h1>
<form action="/auth/myprofile?_method=PUT" method="POST">
  <div class="mt-3">
    <label class="d-block" for="imgFile">Photo (optional):</label>
    <input type="file" accept="image/*" , id="imgFile" name="imgFile" />
  </div>
  <!-- add photo here -->
  <p><b>Username: </b><%= user.username%></p>
  <div class="mt-3">
    <label class="d-block" for="firstName">First Name: </label>
    <input
      type="text"
      id="firstName"
      name="firstName"
      value="<%=user.firstName%>"
    />
    <label class="d-block" for="lastName">Last Name: </label>
    <input
      type="text"
      id="lastName"
      name="lastName"
      value="<%=user.lastName%>"
    />
  </div>

  <p><b>Email address: </b><%= user.email%></p>
  <p><b>Joined: </b><%= user.joined%></p>
  <div class="mt-3">
    <label class="d-block" for="homespace">Name of home space:</label>
    <input
      type="text"
      id="homespace"
      name="homespace"
      value="<%=user.homespace%>"
    />

    <!--to update-->
  </div>
  <button type="submit">Submit edits</button>
</form>

