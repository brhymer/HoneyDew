<%- include("../partials/_nav") %>

<h1>Customize your profile</h1>
<form action="/auth/myprofile?_method=PUT" enctype="multipart/form-data" method="POST">

  <!-- Username -->
  <div class="mt-3">
    <p><b>Username: </b><%= user.username%></p>

  </div>

  <!-- Full name -->
  <div class="mt-3">
    <label class="d-block" for="firstName">First Name: </label>
    <input
      type="text"
      id="firstName"
      name="firstName"
      value="<%=user.firstName%>"
    />
    <label class="d-block" for="lastName">Last Name: </label>
    <input
      type="text"
      id="lastName"
      name="lastName"
      value="<%=user.lastName%>"
    />
  </div>

    <!-- Photo -->
    <div class="mt-3">
      <label class="d-block" for="imgFile">Photo (optional):</label>
      <input type="file" accept="image/*" , id="imgFile" name="imgFile" />
    </div>

  <!-- Email -->
  <div class="mt-3">
    <p><b>Email address: </b><%= user.email%></p>
  </div>
  <!-- Joined -->
  <p><b>Joined: </b><%= user.joined.toDateString()%></p>
  <div class="mt-3">

    <button class="btn btn-primary" type="submit">Submit edits</button>
  </div>
</form>

