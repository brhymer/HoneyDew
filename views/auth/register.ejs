</main>
<h1>Register Here!</h1>
    
<% if(locals.error){%>
    <%- include("../partials/_errorAlert", {error: error})%>
<%}%>

    <form action="/auth/register" method="POST">
        <div class="mt-3">
            <label class="d-block" for="username">Username:</label>
            <input type="text" id="username" name="username">
        </div>
        <div class="mt-3">
            <label class="d-block" for="email">Email:</label>
            <input type="email" id="email" name="email">
        </div>
        <div class="mt-3">
            <label class="d-block" for="password">Password:</label>
            <input type="password" id="password" name="password">
        </div>
        <div class="mt-3">
            <label class="d-block" for="confirm-password">Confirm Password:</label>
            <input type="password" id="confirm-password" name="confirm-password">
        </div>
        <div class="mt-3">
            <button class="btn btn-primary btn-sm" type="submit">Register</button>
            <a class="btn btn-danger btn-sm" href="/">Cancel</a>
        </div>
    </form>
<main>
    
