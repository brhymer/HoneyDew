<%- include("../partials/_head") %>
<script src="/scripts/authRegister.js" defer></script>
<%- include("../partials/_nav") %>
</main>
<h1>Register Here!</h1>
    
<% if(locals.errors){%>
    <%- include("../partials/_errorAlert", {errors: errors})%>
<%}%>

    <form action="/auth/register" method="POST">
        <div class="mt-3">
            <label class="d-block" for="username">Username:</label>
            <input type="text" id="username" name="username">
        </div>
        <div class="mt-3">
            <label class="d-block" for="email">Email:</label>
            <input type="email" id="email" name="email">
        </div>
        <div class="mt-3">
            <label class="d-block" for="password">Password:</label>
            <input type="password" id="password" name="password">
        </div>
        <div class="mt-3">
            <label class="d-block" for="confirm-password">Confirm Password:</label>
            <input type="password" id="confirm-password" name="confirm-password">
        </div>
        <div class="mt-3">
            <input type="checkbox" id="consent" name="consent"/>
            <label for="consent">I agree to nothing</label>
        </div>
        <div class="mt-3">
            <button id="registerButton" class="btn btn-primary btn-sm" type="submit">Register</button>
            <a class="btn btn-danger btn-sm" href="/">Cancel</a>
        </div>
    </form>
<main>
    
<%- include("../partials/_footer") %>