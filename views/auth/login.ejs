<%- include("../partials/_head") %>
<%- include("../partials/_nav") %>
<main>
    <h1>Login</h1>

    <% if(locals.errors){%>
        <%- include("../partials/_errorAlert", {errors: errors})%>
    <%}%>
    
    <p>New to HoneyDew? <a href="/auth/register">Sign up now!</a></p>
    <form action="/auth/login" method="POST">
        <div class="mt-3">
            <label class="d-block" for="username">Username:</label>
            <input type="text" id="username" name="username">
        </div>
        <div class="mt-3">
            <label class="d-block" for="password">Password:</label>
            <input type="password" id="password" name="password">
        </div>
        <div class="mt-3">
            <button class="btn btn-primary btn-sm" type="submit">Login</button>
            <a class="btn btn-danger btn-sm" href="/">Cancel</a>
        </div>  
    </form>
</main>
<%- include("../partials/_footer") %>