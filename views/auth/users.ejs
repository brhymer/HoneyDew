<main>
  <h1>Users</h1>
  <%if(locals.errors) {%> <%-include("../partials/_errorAlert", {errors:
  errors})%> <%}%> <%if(users.length > 0){%>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Spaces</th>
        <th scope="col">Joined</th>
      </tr>
    </thead>
    <tbody>
      <%users.forEach((user) =>{%>
      <tr>
        <th scope="row"><%=users.indexOf(user) + 1%></th>
        <td><%=user.username%></td>
        <td><%=user.email%></td>
        <td>
          <a class="btn btn-info btn-sm" href="/user/spaces/<%=user._id%>"
            >See my spaces</a
          >
        </td>
        <td>Something to come</td>
      </tr>
      <%})%>
    </tbody>
  </table>
  <% } %>
</main>
